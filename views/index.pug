extends layout

block content
  h1= title
  p Welcome to #{title}
  //p #{mapboxToken}
  #mapid(style='width: 1500px; height: 700px;')
  script.
      //sets the view to the inital area
      var mymap = L.map('mapid').setView([#{data.latitude}, #{data.longitude}], 16);
      L.tileLayer('https://api.mapbox.com/styles/v1/{id}/tiles/{z}/{x}/{y}?access_token={accessToken}', {
        attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
        maxZoom: 19,
        id: 'mapbox/streets-v11',
        tileSize: 512,
        zoomOffset: -1,
        accessToken: "#{mapboxToken}"
      }).addTo(mymap);
      var marker = L.marker([#{data.latitude}, #{data.longitude}]).addTo(mymap);
      var popUpHTML = '<b>#{data.nomDevice}</b>';
      marker.bindPopup(popUpHTML).openPopup()
      
